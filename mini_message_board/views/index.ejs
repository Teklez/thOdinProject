<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
      <style>
    .button {
      display: inline-block;
      padding: 5px 10px;
      font-size: 14px;
      text-align: center;
      border-radius: 5px;
      cursor: pointer;
      color:black;
      text-decoration: none;
      border:1px solid black;
    }
  </style
  </head>
  <body style="padding: 10px">
    <h1><%=title%></h1>
    <% messages.forEach((message) => { %>
    <div
      class="messages"
      style="border: 2px solid burlywood; padding: 5px; margin-bottom: 10px"
    >
      <p>Message by <strong> <%=message.user%></strong></p>
      <a href=<%="/detail/" + message.user%> class="button">Open</a>
    </div>

    <% })%>
  </body>
</html>
