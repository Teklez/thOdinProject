extends layout

block content
  div(class="register-container")
    div(class="register")
      h1 Sign Up
      form(action="/auth/register" method="POST")
        div(class="register-input-container")
          label(for="firstname") First Name
          input(type="text" id="firstname" name="firstname" required class="register-input")
        div(class="register-input-container")
          label(for="lastname") Last Name
          input(type="text" id="lastname" name="lastname" required class="register-input")
        div(class="register-input-container")
          label(for="username") Username
          input(type="text" id="username" name="username" required class="register-input")
        div(class="register-input-container")
          label(for="password") Password
          input(type="password" id="password" name="password" required class="register-input")
        div(class="register-input-container")
          label(for="confirmPassword") Confirm Password
          input(type="password" id="confirmPassword" name="confirmPassword" required  class="register-input") 
        div(class="register-input-container")
          button(type="submit" class="submit-btn") Sign Up
        div(class="login-link")
          p Already have an account? 
          a(href="/auth/login") Log in